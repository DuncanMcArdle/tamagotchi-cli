{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"resolveJsonModule": true,
		"lib": ["es6", "dom"],
		"esModuleInterop": true,
		"allowJs": false
	},
	"include": ["src/**/*.ts", ".jest.config.js"],
	"exclude": ["node_modules"],
	"forceConsitentCasingInFileNames": true,
	"noImplicitReturns": true,
	"strict": true,
	"noUnusedLocals": true
}
